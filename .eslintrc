{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "prettier",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "quotes": [ "error", "single" ],
    "semi": [ "error", "always" ],
    "indent": [ "error", 2 ],
    "no-multi-spaces": "error",
    "no-multiple-empty-lines": [ "error", { "max": 1 } ],
    "no-trailing-spaces": "error"
  }
}
